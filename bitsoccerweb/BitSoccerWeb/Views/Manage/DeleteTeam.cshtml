@model BitSoccerWeb.Models.Team

@{
    ViewData["Title"] = "DeleteTeam";
}

<h3>
    Are you sure you want to delete this?
</h3>

<div>
    <h4>
        <a asp-action="EditTeam" asp-route-id="@Model.Id">
            @Html.DisplayFor(model => model.TeamName)
        </a>
    </h4>

    <form asp-action="DeleteTeam">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
        
        <br />
        <br/>

        <a asp-action="Team">
            Back to List
        </a>
    </form>
</div>
